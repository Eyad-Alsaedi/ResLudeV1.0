                    <label asp-for="ScientificAssociation" class="form-label">الجمعية العلمية</label>
                    <select asp-for="ScientificAssociation" asp-items="Model.ScientificAssociations" class="form-control">
                        <option value="">اختر الجمعية العلمية</option>
                    </select>
                    <span asp-validation-for="ScientificAssociation" class="text-danger"></span>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-6">
                <div class="mt-3">
                    <label asp-for="ProfessionalCertificate" class="form-label">شهادة مزاولة المهنة</label>
                    <select asp-for="ProfessionalCertificate" asp-items="Model.ProfessionalCertificates" class="form-control">
                        <option value="">اختر شهادة مزاولة المهنة</option>
                    </select>
                    <span asp-validation-for="ProfessionalCertificate" class="text-danger"></span>
                </div>
            </div>
            <div class="col-6">
                <div class="mt-3">
                    <label asp-for="Qualification" class="form-label">المؤهل</label>
                    <select asp-for="Qualification" asp-items="Model.Qualifications" class="form-control">
                        <option value="">اختر المؤهل</option>
                    </select>
                    <span asp-validation-for="Qualification" class="text-danger"></span>
                </div>
            </div>
        </div>

        <div class="text-center mt-4">
            <button type="submit" class="btn btn-primary btn-lg">إرسال الطلب</button>
        </div>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}