            <div class="col-6">
                <div class="mt-3">
                    <label asp-for="LaborMarketSpecialization" class="form-label">تخصصات سوق العمل</label>
                    <select asp-for="LaborMarketSpecialization" asp-items="Model.LaborMarketSpecializations" class="form-control">
                        <option value="">اختر تخصص سوق العمل</option>
                    </select>
                    <span asp-validation-for="LaborMarketSpecialization" class="text-danger"></span>
