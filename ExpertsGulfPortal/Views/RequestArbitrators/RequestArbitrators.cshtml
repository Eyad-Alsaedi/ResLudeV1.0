                    </select>
                    <span asp-validation-for="Gender" class="text-danger"></span>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-6">
                <div class="mt-3">
                    <label asp-for="Entities" class="form-label">الجهات</label>
                    <select asp-for="Entities" asp-items="Model.EntitiesList" class="form-control">
                        <option value="">اختر الجهة</option>
                    </select>
                    <span asp-validation-for="Entities" class="text-danger"></span>
                </div>
            </div>
            <div class="col-6">
                <div class="mt-3">
                    <label asp-for="Country" class="form-label">الدولة</label>
                    <select asp-for="Country" asp-items="Model.Countries" class="form-control">
                        <option value="">اختر الدولة</option>
                    </select>
                    <span asp-validation-for="Country" class="text-danger"></span>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-6">
                <div class="mt-3">
                    <label asp-for="City" class="form-label">المدينة</label>
                    <select asp-for="City" asp-items="Model.Cities" class="form-control">
                        <option value="">اختر المدينة</option>
                    </select>
                    <span asp-validation-for="City" class="text-danger"></span>
                </div>
            </div>
            <div class="col-6">
                <div class="mt-3">
                    <label asp-for="AcademicDegree" class="form-label">الدرجة العلمية</label>
                    <select asp-for="AcademicDegree" asp-items="Model.AcademicDegrees" class="form-control">
                        <option value="">اختر الدرجة العلمية</option>
                    </select>
                    <span asp-validation-for="AcademicDegree" class="text-danger"></span>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-6">
                <div class="mt-3">
                    <label asp-for="MastersThesisTitle" class="form-label">عنوان رسالة الماجستير</label>
                    <input asp-for="MastersThesisTitle" class="form-control" placeholder="اكتب عنوان رسالة الماجستير" />
                    <span asp-validation-for="MastersThesisTitle" class="text-danger"></span>
                </div>
            </div>
            <div class="col-6">
                <div class="mt-3">
                    <label asp-for="DoctoralThesisTitle" class="form-label">عنوان رسالة الدكتوراه</label>
                    <input asp-for="DoctoralThesisTitle" class="form-control" placeholder="اكتب عنوان رسالة الدكتوراه" />
                    <span asp-validation-for="DoctoralThesisTitle" class="text-danger"></span>
                </div>
            </div>
        </div>

        
            <div class="row-6">
                <div class="mt-3">
                    <label asp-for="GeneralSpecialization" class="form-label">التخصص العام</label>
                    <select asp-for="GeneralSpecialization" asp-items="Model.GeneralSpecializations" class="form-control">
                        <option value="">اختر التخصص العام</option>
                    </select>
                    <span asp-validation-for="GeneralSpecialization" class="text-danger"></span>
                </div>
            </div>
        <div class="row">
            <div class="col-6">
                <div class="mt-3">
                    <label asp-for="SpecificSpecialization1" class="form-label">التخصص الدقيق 1</label>
                    <select asp-for="SpecificSpecialization1" asp-items="Model.SpecificSpecializations1" class="form-control">
                        <option value="">اختر التخصص الدقيق</option>
                    </select>
                    <span asp-validation-for="SpecificSpecialization1" class="text-danger"></span>
                </div>
            </div>
            <div class="col-6">
                <div class="mt-3">
                    <label asp-for="SpecificSpecialization2" class="form-label">التخصص الدقيق 2</label>
                    <select asp-for="SpecificSpecialization2" asp-items="Model.SpecificSpecializations2" class="form-control">
                        <option value="">اختر التخصص الدقيق</option>
                    </select>
                    <span asp-validation-for="SpecificSpecialization2" class="text-danger"></span>
                </div>
            </div>
        </div>

        

        <div class="row">
            <div class="col-6">
                <div class="mt-3">
                    <label asp-for="ResidencePlace" class="form-label">محل الإقامة</label>
                    <select asp-for="ResidencePlace" asp-items="Model.ResidencePlaces" class="form-control">
                        <option value="">اختر محل الإقامة</option>
                    </select>
